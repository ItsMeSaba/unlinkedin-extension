{
  "manifest_version": 3,
  "name": "LinkedOut - Post Filter",
  "version": "1.0",
  "description": "Hide flexing and job-hunting posts from LinkedIn.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "action": {
    "default_popup": "dist/popup/popup.html"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/"],
      "js": ["dist/index.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "src/assets/linkedout-16.png",
    "32": "src/assets/linkedout-32.png",
    "48": "src/assets/linkedout-48.png",
    "128": "src/assets/linkedout-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/assets/*"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
